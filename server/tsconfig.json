{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}